<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:DockLayoutPanel unit="EM" ui:field="topLayoutPanel">
		<g:north size="8">
			<g:SimplePanel ui:field="header"></g:SimplePanel>
		</g:north>
		<g:west size="20">
			<g:SimplePanel ui:field="sidebar"></g:SimplePanel>
		</g:west>
		<g:center>
			<g:CustomScrollPanel ui:field="content"></g:CustomScrollPanel>
		</g:center>
		<g:south size="6">
			<g:SimplePanel ui:field="footer"></g:SimplePanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder>